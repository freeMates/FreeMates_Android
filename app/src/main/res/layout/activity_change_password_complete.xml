<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordCompleteActivity">

    <Button
        android:id="@+id/btnBackToLogin_ChangePasswordComplete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_arrow_back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvChangePasswordPrompt_ChangePasswordComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="비밀번호 변경"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/paperlogy_6semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etUserPassword_ChangePasswordComplete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="86dp"
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_50"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:textColorHint="@color/natural300"
        android:fontFamily="@font/suit_regular"
        android:hint="비밀번호를 입력해주세요."
        android:gravity="center"
        android:drawableEnd="@drawable/ic_password_visibility_off"
        app:layout_constraintTop_toBottomOf="@+id/tvChangePasswordPrompt_ChangePasswordComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvUserPasswordPatternError_ChangePasswordComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:text="10자 이상, 영문, 숫자, 특수문자 중 2종류 이상 조합"
        android:textColor="@color/natural300"
        android:textSize="12sp"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintTop_toBottomOf="@+id/etUserPassword_ChangePasswordComplete"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etUserPasswordCheck_ChangePasswordComplete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_50"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textColorHint="@color/natural300"
        android:fontFamily="@font/suit_regular"
        android:maxLines="1"
        android:hint="비밀번호 확인"
        android:gravity="center"
        android:drawableEnd="@drawable/ic_password_visibility_off"
        app:layout_constraintTop_toBottomOf="@+id/etUserPassword_ChangePasswordComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvUserPasswordMatchError_ChangePasswordComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="40dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="@color/red"
        android:textSize="12sp"
        android:fontFamily="@font/suit_regular"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/etUserPasswordCheck_ChangePasswordComplete"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnCompleteChangePassword_ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:paddingVertical="17dp"
        android:text="로그인 하러가기"
        android:textSize="18sp"
        android:fontFamily="@font/paperlogy_6semibold"
        android:textColor="@color/selector_complete_text"
        android:elevation="6dp"
        android:background="@drawable/selector_complete_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>