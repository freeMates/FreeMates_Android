<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBackToLogin_Register"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_arrow_back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivAppIcon_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvRegisterPrompt_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="프리메이트를 시작합니다!"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/paperlogy_6semibold"
        app:layout_constraintTop_toBottomOf="@+id/ivAppIcon_Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etUserId_Register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_left_50"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/suit_regular"
        android:hint="아이디를 입력해주세요."
        android:gravity="center"
        android:layout_marginStart="24dp"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintTop_toBottomOf="@+id/tvRegisterPrompt_Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etUserIdDuplication_Register"/>

    <Button
        android:id="@+id/etUserIdDuplication_Register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:text="중복 확인"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/roundedbox_right_50"
        android:backgroundTint="@color/main_color"
        android:elevation="6dp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintTop_toBottomOf="@+id/tvRegisterPrompt_Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etUserId_Register"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:text="사용가능한 아이디입니다."
        android:textColor="@color/hint_color"
        android:textSize="12sp"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintTop_toBottomOf="@+id/etUserId_Register"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etUserPassword_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_50"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/suit_regular"
        android:hint="비밀번호를 입력해주세요."
        android:gravity="center"
        android:drawableEnd="@drawable/ic_password_visibility_off"
        app:layout_constraintTop_toBottomOf="@+id/etUserId_Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:text="10자 이상, 영문, 숫자, 특수문자 중 2종류 이상 조합"
        android:textColor="@color/hint_color"
        android:textSize="12sp"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintTop_toBottomOf="@+id/etUserPassword_Register"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etUserPasswordCheck_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_50"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/suit_regular"
        android:maxLines="1"
        android:hint="비밀번호 확인"
        android:gravity="center"
        android:drawableEnd="@drawable/ic_password_visibility_off"
        app:layout_constraintTop_toBottomOf="@+id/etUserPassword_Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etUserPhone_Register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_left_50"
        android:elevation="6dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/suit_regular"
        android:hint="전화번호를 입력해주세요."
        android:gravity="center"
        android:layout_marginStart="24dp"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintTop_toBottomOf="@+id/etUserPasswordCheck_Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etUserPhoneVerify_Register"/>

    <Button
        android:id="@+id/etUserPhoneVerify_Register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:text="인증하기"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/roundedbox_right_50"
        android:backgroundTint="@color/main_color"
        android:elevation="6dp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintTop_toBottomOf="@+id/etUserPasswordCheck_Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etUserPhone_Register"/>

    <EditText
        android:id="@+id/etVerificationCode_Register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/roundedbox_left_50"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/suit_regular"
        android:maxLines="1"
        android:hint="인증번호를 입력해주세요."
        android:gravity="center"
        android:layout_marginStart="24dp"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintTop_toBottomOf="@+id/etUserPhone_Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etVerificationCodeCheck_Register"/>

    <Button
        android:id="@+id/etVerificationCodeCheck_Register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:text="확인"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/roundedbox_right_50"
        android:backgroundTint="@color/main_color"
        android:elevation="6dp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintTop_toBottomOf="@+id/etUserPhone_Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etVerificationCode_Register"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:paddingVertical="17dp"
        android:text="회원가입하기"
        android:textSize="18sp"
        android:fontFamily="@font/paperlogy_6semibold"
        android:textColor="@color/black"
        android:elevation="6dp"
        android:background="@drawable/roundedbox_50"
        android:backgroundTint="@color/main_color"
        app:layout_constraintTop_toBottomOf="@+id/etVerificationCode_Register"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>