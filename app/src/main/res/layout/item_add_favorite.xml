<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="21dp"
    android:paddingEnd="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/natural100"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivFavoriteMarker_AddFavoriteItem"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_blue_marker"/>

    <TextView
        android:id="@+id/tvFavoriteTitle_AddFavoriteItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/suit_semibold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFavoriteMarker_AddFavoriteItem"
        app:layout_constraintEnd_toStartOf="@+id/ivFavoriteImage_AddFavoriteItem"
        tools:text="절실한 카공이 필요할 때"/>

    <TextView
        android:id="@+id/tvPlaceCnt_AddFavoriteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/natural300"
        android:textSize="12sp"
        android:fontFamily="@font/suit_semibold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/tvFavoriteTitle_AddFavoriteItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFavoriteMarker_AddFavoriteItem"
        tools:text="35개"/>

    <TextView
        android:id="@+id/tvDivider_AddFavoriteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="4dp"
        android:text="·"
        android:textColor="@color/natural300"
        android:textSize="12sp"
        android:fontFamily="@font/suit_semibold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/tvFavoriteTitle_AddFavoriteItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPlaceCnt_AddFavoriteItem" />

    <TextView
        android:id="@+id/tvPlaceVisibilityStatus_AddFavoriteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/natural300"
        android:textSize="12sp"
        android:fontFamily="@font/suit_semibold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/tvFavoriteTitle_AddFavoriteItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDivider_AddFavoriteItem"
        tools:text="비공개"/>

    <ImageView
        android:id="@+id/ivFavoriteImage_AddFavoriteItem"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/image1"/>

</androidx.constraintlayout.widget.ConstraintLayout>