<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="4dp"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/tvCourseDuration_CourseItemHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/paperlogy_6semibold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvCourseDurationFilter_CourseItemHeader"
        tools:text="30분 소요 코스"/>

    <TextView
        android:id="@+id/tvCourseDurationFilter_CourseItemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/natural300"
        android:textSize="8sp"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="좋아요 많은 순"/>

</androidx.constraintlayout.widget.ConstraintLayout>