<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vLine_CoursePlaceItemFooter"
        android:layout_width="2dp"
        android:layout_height="8dp"
        android:background="@color/primary300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivStartCircle_CoursePlaceItemHeader"
        app:layout_constraintEnd_toEndOf="@+id/ivStartCircle_CoursePlaceItemHeader"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivStartCircle_CoursePlaceItemHeader"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="2dp"
        android:src="@color/primary300"
        app:layout_constraintTop_toBottomOf="@+id/vLine_CoursePlaceItemFooter"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivUniversityLogo_CoursePlaceItemFooter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_add"
        app:layout_constraintTop_toTopOf="@+id/ivStartCircle_CoursePlaceItemHeader"
        app:layout_constraintBottom_toBottomOf="@+id/ivStartCircle_CoursePlaceItemHeader"
        app:layout_constraintStart_toEndOf="@+id/ivStartCircle_CoursePlaceItemHeader"/>

    <TextView
        android:id="@+id/tvWalkTime_CoursePlaceItemFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="12sp"
        android:textColor="@color/natural300"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintStart_toStartOf="@+id/ivUniversityLogo_CoursePlaceItemFooter"
        app:layout_constraintTop_toBottomOf="@+id/ivUniversityLogo_CoursePlaceItemFooter"
        tools:text="도보 15분"/>

    <TextView
        android:id="@+id/tvCrosswalkCount_CoursePlaceItemFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:textColor="@color/natural300"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintStart_toEndOf="@+id/tvWalkTime_CoursePlaceItemFooter"
        app:layout_constraintTop_toBottomOf="@+id/ivUniversityLogo_CoursePlaceItemFooter"
        tools:text="횡단보도 2회"/>

</androidx.constraintlayout.widget.ConstraintLayout>