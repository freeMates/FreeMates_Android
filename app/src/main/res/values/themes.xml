<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FreeMates_Android" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FreeMates_Android" parent="Base.Theme.FreeMates_Android" />

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_fill</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Widget.Design.BottomNavigationView">
        <!--    TextFont 설정    -->
        <item name="fontFamily">@font/suit_regular</item>
        <!--    TextSize 설정    -->
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="TextInputCounterOverflow" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/natural300</item>
    </style>
</resources>